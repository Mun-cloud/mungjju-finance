generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Spending {
  id        String   @id @default(uuid())
  amount    Int
  category  String
  subCategory String?
  date      DateTime?
  where     String?
  memo      String?
  createdAt DateTime @default(now())
  userEmail String
  role      String
}

model MonthlyMemo {
  id        String   @id @default(uuid())
  userEmail String
  year      Int
  month     Int      // 1-12
  memo      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userEmail, year, month])
  @@map("monthly_memos")
}